{
	"request": {
		"method": "POST",
		"url": "/api/v1/auth/forgot-password",
		"bodyPatterns": [
			{
				"matchesJsonPath": "$[?(@.username == 'user@test.com')]"
			}
		]
	},
	"response": {
		"status": 200,
		"headers": {
			"Content-Type": "application/json"
		},
		"jsonBody": {
			"data": {
				"type": "authentication",
				"attributes": {
					"success": true,
					"message": "Password reset instructions have been sent"
				}
			},
			"links": {
				"self": "http://localhost:5000/api/v1/auth/forgot-password"
			}
		}
	}
}
